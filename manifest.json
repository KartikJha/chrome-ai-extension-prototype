{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "description": "Reads data on the current page and summarizes it.",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "sidePanel", "activeTab"],
  "action": {
    "default_title": "Click to open sidebar"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}