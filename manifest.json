{
    "manifest_version": 3,
    "name": "Speech Logger",
    "version": "1.0",
    "description": "Takes speech input and logs it in popup console",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Speech Logger"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "audioCapture"
    ]
  }
  